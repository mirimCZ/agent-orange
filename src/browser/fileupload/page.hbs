<div>
  <label for="file-upload-input" class="btn file_upload-btn">
    {{labels.uploadButton}}
    <input
      id="file-upload-input"
      type="file"
      class="file-upload-input file hide novalidate"
      multiple
      />
  </label>

  <table>
    {{#map files}}
      <tr data-fileId="{{id}}" class="file_upload-file_list-item">
      	<td>{{name}}</td>
      	<td>{{size}}</td>
        <td>{{status}}</td>
      	<td>Progress</td>
      	<td>
          <button
            type="button"
            class="btn btn-round file_upload-file_list-item-remove novalidate"
            >
            <span class="glyphicon glyphicon-remove"></span>
          </button>
        </td>
      </tr>
    {{/map}}
  </table>

  <button class="start-upload">Start upload</button>
</div>
